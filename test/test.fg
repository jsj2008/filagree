tester.test('sort',
    function()
        p = [3,1,4,1,5,9,6,2]
        p.sort()
        q = [['a':3, 'b':4], ['a':2, 'b':5]]
        q.sort(function(x,y) return y.a - x.a end)
        return p[0] + q[0].a
    end,
    4)

tester.test('find',
