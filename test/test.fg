tester.test('replace',
    function()
        p = 'one two three four'
        q = p.replace('two', '2')
        r = q.replace('o', '0', 1) # specifying position means not global
        s = r.replace('e', '3')
        t = s.replace(6, 3, 'gl') # start, length, new_string
        return t
    end,
    'on3 2 gl33 f0ur')


tester.test('for each',
    function()
        x = [3,1,4,1,5,9]
        sum = 20
        for n in x where n > 3
            sum = sum - n
        end
        y = ['a':7,'b':8]
        for k in y.keys
            sum = sum + y[k]
        end
        return sum
    end,
    17)


tester.test('comprehension',
    function()
        x = [3,1,4,1,5,9]
        y = [n+1 for n in x where n > 3]
        return y
    end,
    [5,6,10])

